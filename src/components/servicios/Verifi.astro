---
import { verificacion } from "@constants/servicios";
---

<section>
  <div
    class="flex flex-col justify-center md:items-start md:text-left text-center"
  >
    <span class="text-rose-500 text-2xl md:text-4xl font-bold"
      >{verificacion.title}
    </span>
    <p class="my-2 text-lg text-slate-800 prose-xl">
      {verificacion.body}
    </p>
    <p class="my-2 text-lg text-slate-800 prose-xl">
      {verificacion.subTitle}
    </p>
  </div>
  {
    verificacion.requisitos.map((item) => (
      <div class="px-8  ">
        <p class=" px-6 text-slate-800 prose-xl">{item}</p>
      </div>
    ))
  }
</section>
