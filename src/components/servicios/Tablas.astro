---
import { costos, horario } from "@constants/servicios";
---

<section class="py-10 px-4">
  <div
    class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center justify-center"
  >
    <!-- Tabla de Costos -->
    <div>
      <h2 class="text-2xl font-bold text-rose-500 mb-4 text-center">Costos</h2>
      <div class="w-full border border-slate-300 rounded-lg">
        {
          costos.map((item, index) => (
            <div
              class={`grid grid-cols-2 items-center p-4 ${
                index % 2 === 0 ? "bg-white" : "bg-slate-100"
              } border-b border-slate-300 hover:bg-slate-200 transition`}
            >
              <div class="text-lg font-semibold text-slate-800">
                {item.title}
              </div>
              <div class="text-slate-600 text-right">{item.umas}</div>
            </div>
          ))
        }
      </div>
    </div>

    <!-- Tabla de Horarios -->
    <div>
      <h2 class="text-2xl font-bold text-rose-500 mb-4 text-center">Horario</h2>
      <div class="w-full border border-slate-300 rounded-lg">
        {
          horario.map((item, index) => (
            <div
              class={`grid grid-cols-2 items-center p-4 ${
                index % 2 === 0 ? "bg-white" : "bg-slate-100"
              } border-b border-slate-300 hover:bg-slate-200 transition`}
            >
              <div class="text-lg font-semibold text-slate-800">{item.day}</div>
              <div class="text-slate-600 text-right">{item.time}</div>
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <div class="flex justify-end px-4 items-center mt-4">
    <small class="text-center italic">SÃ¡bados de 8:00 a 13:00</small>
  </div>
</section>
