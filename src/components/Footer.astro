---
// Importa tu logo (asegúrate de tener el logo disponible en la ruta correcta)
import Logo from "@assets/simorLogo.avif";
import { Image } from "astro:assets";
import { rutas } from "@constants/routes";
import Container from "@components/shared/Container.astro";
---

<footer class="bg-secondary text-slate-100">
  <Container>
    <div
      class="container mx-auto px-5 grid gap-10 sm:grid-cols-2 lg:grid-cols-3"
    >
      <!-- Logo y texto -->
      <div class="flex flex-col items-center text-center">
        <Image
          src={Logo}
          alt="Logo"
          width="100"
          height="100"
          class="w-36 h-auto"
        />

        <p class="mt-4 text-lg font-semibold">
          Sistemas de Verificación MOR, S.A. de C.V.
        </p>
      </div>

      <!-- Rutas del sitio -->
      <div class="flex flex-col space-y-2 items-center justify-center">
        <h3 class="text-lg font-semibold mb-4">Secciones</h3>
        {
          rutas.map((route) => (
            <a
              href={route.path}
              class="text-slate-100 hover:text-slate-100 transition-colors duration-100"
            >
              {route.name}
            </a>
          ))
        }
      </div>

      <!-- Información de contacto -->
      <div
        class="flex flex-col space-y-4 items-center justify-center text-center"
      >
        <h3 class="text-lg font-semibold mb-4">Contáctanos</h3>
        <a
          target="_blank"
          href="https://maps.app.goo.gl/UeE8v6eawXyaP9uJ9"
          class="text-slate-100 hover:underline transition-all ease-in hover:scale-105"
        >
          <strong>Ubicación:</strong> Autopista Cuernavaca-Acapulco, km 115 Col.
          Alpuyeca, Xochitepec Morelos.
        </a>
        <a
          href="tel:777-688-4611"
          target="_blank"
          class="hover:underline transition-all ease-in text-slate-100 hover:scale-105"
        >
          <strong>Teléfono:</strong> 777-688-4611</a
        >
        <p class="text-slate-100">
          <strong>Horario:</strong> Lunes a Domingo, 8:00 AM - 8:00 PM
          <span>Sabado, 8:00 AM - 1:00 PM</span>
        </p>
      </div>
    </div>
  </Container>

  <!-- Pie de página pequeño para dispositivos móviles -->
  <div class="mt-10 text-center text-sm text-slate-100">
    © 2024 Giintape Inovahue. Todos los derechos reservados.
  </div>
</footer>
