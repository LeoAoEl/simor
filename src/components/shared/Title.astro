---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="text-center">
  <h1
    class="text-textPrimary text-3xl md:text-5xl font-bold inline-block relative"
  >
    {title}
    <span class="absolute left-0 -bottom-2 h-1 bg-primary w-full rounded"
    ></span>
  </h1>
</div>
