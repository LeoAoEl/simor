---
import { verificacion } from "@constants/about";
---

<section id="tablaVerify" class="py-10 px-4">
  <div class="w-full max-w-4xl mx-auto">
    <h2 class="text-2xl font-bold text-center text-rose-500 mb-6">
      Verificación de Inspección Físico Mecánica
    </h2>

    <div class="w-full border border-textPrimary rounded-lg overflow-hidden">
      <div class="grid grid-cols-2 bg-secondary text-white font-bold text-lg">
        <div class="p-4 text-center">Terminación de Placa</div>
        <div class="p-4 text-center">Meses para Verificar</div>
      </div>

      <!-- Filas de datos -->
      {
        verificacion.map((item, index) => (
          <div
            class={`grid grid-cols-2 items-center p-4 ${
              index % 2 === 0 ? "bg-white" : "bg-slate-100"
            } border-b border-slate-300 hover:bg-slate-200 transition`}
          >
            <div class="text-center text-lg font-semibold text-slate-800">
              {item.terminacion}
            </div>
            <div class="text-center text-slate-600">{item.meses}</div>
          </div>
        ))
      }
    </div>
  </div>
</section>
